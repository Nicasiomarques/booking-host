{
  "name": "booking-service",
  "version": "1.0.0",
  "description": "Booking service monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:backend": "pnpm --filter @booking-service/backend dev",
    "dev:backoffice": "pnpm --filter @booking-service/backoffice dev",
    "dev": "pnpm --filter @booking-service/backend dev",
    "dev:all": "pnpm --parallel --filter @booking-service/backend --filter @booking-service/backoffice dev",
    "build:backend": "pnpm --filter @booking-service/backend build",
    "build:backoffice": "pnpm --filter @booking-service/backoffice build",
    "build": "pnpm --filter @booking-service/backend build && pnpm --filter @booking-service/backoffice build",
    "test:backend": "pnpm --filter @booking-service/backend test",
    "test:backoffice": "pnpm --filter @booking-service/backoffice test:e2e",
    "test": "pnpm --filter @booking-service/backend test && pnpm --filter @booking-service/backoffice test:e2e",
    "db:generate": "pnpm --filter @booking-service/backend db:generate",
    "db:migrate": "pnpm --filter @booking-service/backend db:migrate",
    "db:push": "pnpm --filter @booking-service/backend db:push",
    "db:reset": "pnpm --filter @booking-service/backend db:reset",
    "db:studio": "pnpm --filter @booking-service/backend db:studio",
    "db:seed": "pnpm --filter @booking-service/backend db:seed"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
