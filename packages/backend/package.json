{
  "name": "@booking-service/backend",
  "version": "1.0.0",
  "description": "Booking management API for establishments",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:e2e": "vitest run --config vitest.config.ts --reporter=verbose",
    "test:e2e:smoke": "vitest run --config vitest.config.ts --reporter=verbose -t @smoke",
    "test:e2e:critical": "vitest run --config vitest.config.ts --reporter=verbose -t @critical",
    "test:e2e:security": "vitest run --config vitest.config.ts --reporter=verbose -t @security",
    "test:e2e:watch": "vitest --config vitest.config.ts --reporter=verbose",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "db:generate": "prisma generate --schema=src/shared/adapters/outbound/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --config=src/shared/adapters/outbound/prisma/prisma.config.ts",
    "db:push": "tsx -r dotenv/config scripts/db-push.ts",
    "db:reset": "tsx -r dotenv/config scripts/db-reset.ts",
    "db:studio": "tsx -r dotenv/config scripts/db-studio.ts",
    "db:seed": "tsx src/shared/adapters/outbound/prisma/seed.ts"
  },
  "keywords": [
    "booking",
    "api",
    "fastify",
    "prisma"
  ],
  "author": "",
  "license": "ISC",
  "imports": {
    "#adapters/*": "./src/adapters/*",
    "#application/*": "./src/application/*",
    "#config/*": "./src/config/*",
    "#domain/*": "./src/domain/*",
    "#features/*": "./src/features/*",
    "#shared/*": "./src/shared/*"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.2.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "zod": "^4.2.1",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.2.0",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "vitest": "^4.0.16"
  }
}
